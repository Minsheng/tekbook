{>"layouts/master" /}

{<body}
	<div class="row">
		<div class="large-12 columns">
			<div class="row">
				{#books}
					<div class="small-4 large-4 columns book">
						<img src="/img/{.cover}">

						<div class="panel">
							<h4>{.title}</h4>
							<p>{.truncText}</p>
							<h6 class="price">${.price}</h6>
							<a href="/books/details/{._id}" class="button small">Book Details</a>
						</div>
					</div>
				{/books}
			</div>
		</div>
	</div>
	
{/body}
